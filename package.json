{
    "name": "ai-hero-tycoon",
    "version": "1.0.0",
    "type": "module",
    "description": "AI Hero Tycoon - A business simulation game built with PixiJS",
    "author": {
        "name": "Your Name",
        "url": "https://github.com/yourusername"
    },
    "scripts": {
        "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
        "dev:client": "vite --port 3000",
        "dev:server": "nodemon src/server/index.ts",
        "start": "npm run dev",
        "build": "run-s clean format:check lint assets types build:client build:server",
        "build:client": "vite build",
        "build:server": "tsc -p tsconfig.server.json",
        "clean": "rimraf dist/* public/*",
        "assets": "assetpack",
        "preview": "vite preview --open",
        "lint": "eslint src --fix",
        "format": "prettier --write src",
        "format:check": "prettier --check src",
        "types": "tsc --noEmit",
        "db:migrate": "node scripts/migrate.cjs",
        "db:seed": "node scripts/seed.cjs"
    },
    "dependencies": {
        "@google/generative-ai": "^0.21.0",
        "@pixi/sound": "^6.0.1",
        "@pixi/ui": "^2.2.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.1",
        "gsap": "^3.13.0",
        "pg": "^8.13.1",
        "pixi-filters": "^6.1.4",
        "pixi.js": "^8.13.1",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "typed-signals": "^2.5.0",
        "uuid": "^11.0.4"
    },
    "devDependencies": {
        "@assetpack/core": "^1.0.0-rc",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/pg": "^8.11.10",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.16.0",
        "@typescript-eslint/parser": "^8.16.0",
        "concurrently": "^9.1.0",
        "eslint": "^9.17.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "nodemon": "^3.1.9",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "vite": "^7.1.4"
    }
}
